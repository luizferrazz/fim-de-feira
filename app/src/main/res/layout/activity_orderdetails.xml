<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/formaOrderDetails"
        android:layout_width="418dp"
        android:layout_height="125dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forma_history" />

    <TextView
        android:id="@+id/OrderDetails_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Detalhes do Pedido"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <LinearLayout
        android:layout_width="297dp"
        android:layout_height="267dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="336dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/formaOrderDetails"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintTop_toBottomOf="@id/formaOrderDetails"
        android:background="@drawable/borda_detalhes_pedido"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="165dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/logo_teste" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nameSM_OrderDetails"
                    android:layout_width="match_parent"
                    android:layout_height="33dp"
                    android:fontFamily="@font/poppins"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="Nome do Mercado"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dateSM_OrderDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="Data de Criação do Pedido"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/numberSM_OrderDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="Numero do Pedido" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/status_orderdetails"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:fontFamily="@font/poppins"
                android:layout_marginLeft="10dp"
                android:text="Status:"
                android:gravity="center|start"
                android:textColor="@color/dark_green"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="114dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/check" />

                <TextView
                    android:id="@+id/orderStatus_orderdetails"
                    android:layout_width="322dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|start"
                    android:paddingStart="10dp"
                    android:text="Status do Pedido"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/products_orderdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Produtos:"
                android:gravity="center|start"
                android:paddingStart="0dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@color/dark_green"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/typeProduct_orderdetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:text="Tipo do Produto"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="Total:"
                android:gravity="center|start"
                android:paddingStart="0dp"
                android:textColor="@color/dark_green"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/orderTotal_orderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:paddingStart="10dp"
                android:text="R$: 30,00"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>